{
	"root": true,
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"globals": {
		"wp": true
	},
	"rules": {
		"camelcase": 0,
		"indent": 0,
		"no-console": 1
	},
	"parser": "babel-eslint",
	"extends": ["eslint:recommended", "plugin:import/errors", "plugin:import/warnings", "plugin:react/recommended" ],
	"settings": {
		"react": {
			"version": "detect"
		},
		"import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
	},
	"plugins": ["import"]
}
