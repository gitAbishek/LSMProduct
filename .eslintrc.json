{
  "root": true,
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "wp": true
  },
  "rules": {
    "camelcase": 0,
    "indent": 0,
    "no-console": 1
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      },
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  },
  "plugins": ["import"]
}
