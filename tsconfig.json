{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "Components/*": ["./assets/js/back-end/components/*"],
      "Config/*": ["./assets/js/back-end/config/*"],
      "Layouts/*": ["./assets/js/back-end/screens/layouts/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ],
  "include": [
    "assets/js/back-end",
    "assets/js/back-end/types/custom.d.ts",
    "assets/js/getting-started"
  ]
}
